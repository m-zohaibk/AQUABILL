/**
 * @fileoverview Firestore Security Rules for Water Supply App.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model where each user has exclusive
 * access to their own data. All data is nested under /users/{userId}, and access
 * is granted only to the authenticated user whose UID matches the {userId} path segment.
 *
 * Data Structure:
 * - /users/{userId}/customers/{customerId}: Stores customer information for each user.
 * - /users/{userId}/invoices/{invoiceId}: Stores invoice data for each user.
 * - /users/{userId}/settings/{settingId}: Stores application settings for each user.
 *
 * Key Security Decisions:
 * - All data is private to the user.
 * - List operations are allowed for the owner.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description All documents under a user's path are only accessible by that user.
     * @path /users/{userId}/{document=**}
     * @allow (read, write) An authenticated user with UID "user123" can read and write to /users/user123/customers/customer456.
     * @deny (read, write) An authenticated user with UID "user456" cannot read or write to /users/user123/customers/customer456.
     * @principle Enforces document ownership based on the user ID in the path.
     */
    match /users/{userId}/{document=**} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Rules for the customers collection under a specific user.
     * @path /users/{userId}/customers/{customerId}
     * @allow (create) An authenticated user with UID "user123" can create a customer document under /users/user123/customers. The document's ID does not need to match the userId.
     * @allow (read) An authenticated user with UID "user123" can read a customer document under /users/user123/customers/customer456.
     * @deny (read) An authenticated user with UID "user456" cannot read a customer document under /users/user123/customers/customer456.
     * @principle Enforces document ownership for data privacy.
     */
    match /users/{userId}/customers/{customerId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Rules for the invoices collection under a specific user.
     * @path /users/{userId}/invoices/{invoiceId}
     * @allow (create) An authenticated user with UID "user123" can create an invoice document under /users/user123/invoices. The document's ID does not need to match the userId.
     * @allow (read) An authenticated user with UID "user123" can read an invoice document under /users/user123/invoices/invoice456.
     * @deny (read) An authenticated user with UID "user456" cannot read an invoice document under /users/user123/invoices/invoice456.
     * @principle Enforces document ownership for data privacy.
     */
    match /users/{userId}/invoices/{invoiceId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Rules for the settings collection under a specific user.
     * @path /users/{userId}/settings/{settingId}
     * @allow (create) An authenticated user with UID "user123" can create a setting document under /users/user123/settings. The document's ID does not need to match the userId.
     * @allow (read) An authenticated user with UID "user123" can read a setting document under /users/user123/settings/setting456.
     * @deny (read) An authenticated user with UID "user456" cannot read a setting document under /users/user123/settings/setting456.
     * @principle Enforces document ownership for data privacy.
     */
    match /users/{userId}/settings/{settingId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }
  }

  // Helper functions
  function isSignedIn() {
    return request.auth != null;
  }

  function isOwner(userId) {
    return request.auth.uid == userId;
  }

  function isExistingOwner(userId) {
    return isSignedIn() && isOwner(userId) && resource != null;
  }
}